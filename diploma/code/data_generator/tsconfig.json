{
  "compilerOptions": {
    "lib": ["es2021"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "files": [
    "./.eslintrc.js",
  ]
}
